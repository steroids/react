{
  "compilerOptions": {
    "jsx": "react",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "declaration": true,
    "isolatedModules": true,
    "outDir": "./dist",
    "paths": {
      "@steroidsjs/core/*": [
        "../react/src/*"
      ],
      "@steroidsjs/bootstrap/*": [
        "../react-bootstrap/src/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
  ]
}
